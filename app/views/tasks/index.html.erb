
<div class="container">
  <div class ="row">
    <% @tasks.each_slice(3) do |row| %>
      <% row.each do |task| %>
        <div class="col">
          <div class="card">
            <%= image_tag task.photo, class:"card-img-top"%>
              <div class="card-body">
                <h5> <%= task.name%></h5>
              </div>
          </div>
        </div>
     <% end %>
     <div class="w-100" style="margin-top:20px"></div>
     <% end %>
  </div>
</div>
